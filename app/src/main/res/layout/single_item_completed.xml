<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/payment_from"
            android:layout_margin="6dp"
            android:id="@+id/payment_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/payment_title"
            android:textColor="@color/black"
            android:layout_marginStart="6dp"
            android:textSize="18dp"
            android:text="Dr. Dipanjan Biswas"
            android:id="@+id/payment_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/payment_name"
            android:textColor="@color/black"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:textSize="14dp"
            android:id="@+id/payment_date"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/payment_name"
            android:layout_marginEnd="16dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:id="@+id/payment_amount"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/ash_grey"/>



</RelativeLayout>