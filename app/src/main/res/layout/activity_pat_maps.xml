<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PatMapsActivity" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:padding="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_user"
            android:layout_margin="5dp"
            android:id="@+id/pat_map_profile_image"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/pat_map_profile_image"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:id="@+id/pat_map_name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/pat_map_profile_image"
            android:layout_below="@id/pat_map_name"
            android:textColor="@android:color/black"
            android:id="@+id/pat_map_date"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dot"
            android:layout_toEndOf="@id/pat_map_date"
            android:layout_alignTop="@id/pat_map_date"
            android:layout_alignBottom="@id/pat_map_date"
            android:layout_marginStart="8dp"
            android:id="@+id/dot_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/dot_image"
            android:layout_alignTop="@id/dot_image"
            android:layout_alignBottom="@id/dot_image"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            android:id="@+id/pat_map_time"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pat_map_date"
            android:layout_toEndOf="@id/pat_map_profile_image"
            android:textColor="@android:color/black"
            android:id="@+id/pat_map_full_address"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pat_map_full_address"
            android:text="@string/accept"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/pat_map_accept"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pat_map_accept"
            android:text="@string/decline"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/pat_map_decline"
            />

    </RelativeLayout>

</RelativeLayout>

